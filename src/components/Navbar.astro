---
/* No necesitas lógica en el archivo si no es necesario */
---

<nav class="bg-white text-gray-800 shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex-shrink-0 text-xl font-semibold">MiSitio</div>
        <div class="hidden md:block">
          <div class="flex space-x-4">
            <a href="/" class="text-gray-800 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Inicio</a>
            <a href="/about" class="text-gray-800 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Acerca de</a>
            <a href="/services" class="text-gray-800 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Servicios</a>
            <a href="/contact" class="text-gray-800 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Contacto</a>
          </div>
        </div>
        <div class="md:hidden">
          <button id="menu-toggle" class="text-gray-800 focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div id="mobile-menu" class="md:hidden max-h-0 overflow-hidden transform transition-all duration-500 ease-in-out">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <a href="/" class="text-gray-800 block px-3 py-2 rounded-md text-base font-medium">Inicio</a>
        <a href="#features" class="text-gray-800 block px-3 py-2 rounded-md text-base font-medium">Características</a>
        <a href="#testimonials" class="text-gray-800 block px-3 py-2 rounded-md text-base font-medium">Testimonios</a>
        <a href="#pricing" class="text-gray-800 block px-3 py-2 rounded-md text-base font-medium">Precios</a>
        <a href="#cta" class="text-gray-800 block px-3 py-2 rounded-md text-base font-medium">Solicita una Demo</a>
        <a href="#contact" class="text-gray-800 block px-3 py-2 rounded-md text-base font-medium">Contacto</a>
      </div>
      
    </div>
  </nav>
  
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menuToggle = document.getElementById("menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
  
      if (menuToggle && mobileMenu) {
        menuToggle.addEventListener("click", () => {
          // Cambiar la altura máxima para mostrar u ocultar el menú con una animación suave
          mobileMenu.classList.toggle("max-h-0");
          mobileMenu.classList.toggle("max-h-96");  // Este valor controla cuánto se abre el menú
        });
      }
    });
  </script>
  